import express from "express";
import db from "./db"; // adjust path depending on your folder structure

const app = express();
app.use(express.json());

// Test DB connectivity
app.get("/api/db-test", async (req, res) => {
  try {
    const result = await db.query("SELECT COUNT(*) FROM form_submissions;");
    res.json({
      success: true,
      message: "Connected to Azure PostgreSQL!",
      rows_in_table: result.rows[0].count
    });
  } catch (err) {
    console.error(err);
    res.status(500).json({
      success: false,
      error: "Database NOT connected",
      details: err.message
    });
  }
});
